@model IEnumerable<EntregableLibreria.Models.Prestamo>

@{
    ViewData["Title"] = "Préstamos";
}

<h1>Gestión de Préstamos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo Préstamo</a>
</p>

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Libro</th>
            <th>Usuario</th>
            <th>Fecha Préstamo</th>
            <th>Estado</th>
            <th>Acción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Libro.Titulo</td>
                <td>@item.Usuario.Nombre</td>
                <td>@item.FechaPrestamo.ToShortDateString()</td>
                <td>
                    @if (item.FechaDevolucion == null)
                    {
                            <span class="badge bg-warning text-dark">Pendiente</span>
                    }
                    else
                    {
                            <span class="badge bg-success">Devuelto</span>
                    }
                </td>
                <td>
                    @if (item.FechaDevolucion == null)
                    {
                            <a asp-action="Devolver" asp-route-id="@item.Id" class="btn btn-sm btn-success">Marcar Devolución</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>